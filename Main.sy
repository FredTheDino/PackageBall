mod Main

type State = { x: Int }
type Input = { left: Bool, right: Bool, up: Bool, down: Bool }

def update : Real -> Input -> State -> State : dt input state@{ x } =
  match input
  with { left: true } -> { x: x + 1 | state }
  with _ -> state
  end

def init :  Int -> State : _ = { x: 2 }

def draw
: State -> Render Int
: state = Render.pure 1
