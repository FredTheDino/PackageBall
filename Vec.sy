mod Vec

type Vec = { x : Real, y : Real }

def add
: Vec -> Vec -> Vec
: { x: xa, y: ya } { x: xb, y: yb }
= { x: xa + xb, y: ya + yb }

def mul
: Real -> Vec -> Vec
: s { x: xa, y: ya }
= { x: s * xa, y: s * ya }

def dot
: Vec -> Vec -> Real
: { x: xa, y: ya } { x: xb, y: yb }
= (xa * xb) + (ya * yb)
